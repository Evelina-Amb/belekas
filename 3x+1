<?php

$i=7; 
$kiekis=0; 

while ($i!=1) {
    echo "$i <br>"; 
    
    if ($i%2==0) {
        $i=$i/2;
    } 
    
    else {
        $i=($i*3)+1; 
    }
    
    $kiekis++;
}

echo "Paskutinė reikšmė: $i <br>"; 
echo "Iš viso iteracijų: $kiekis"; 

?>   
</body>
</html> 
